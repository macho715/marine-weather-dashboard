# Logistics Control Tower Environment Variables

# Base URL
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# External APIs
NOAA_API_KEY=your_noaa_api_key_here
AIS_API_KEY=your_ais_api_key_here

# Google Sheets Integration
GOOGLE_SHEETS_API_KEY=your_google_sheets_api_key_here
GOOGLE_SHEETS_SHEET_ID=your_google_sheets_sheet_id_here

# Database (Optional)
DATABASE_URL=postgresql://username:password@localhost:5432/logistics_db

# Security
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Monitoring
SENTRY_DSN=your_sentry_dsn_here

# Feature Flags
ENABLE_REAL_TIME_TRACKING=true
ENABLE_WEATHER_ALERTS=true
ENABLE_TELEGRAM_NOTIFICATIONS=true

# Marine Operations Analytics Toolkit
# 해양 운항 분석 툴킷 환경 변수

# API Keys
STORMGLASS_API_KEY=your_stormglass_api_key_here
WORLDTIDES_API_KEY=your_worldtides_api_key_here

# Open-Meteo Configuration
OPEN_METEO_BASE=https://marine-api.open-meteo.com/v1/marine
OPEN_METEO_TIMEOUT=10.0

# Application Settings
APP_LOG_LEVEL=INFO
TZ=UTC

# Risk Thresholds
WV_MEDIUM_WAVE_THRESHOLD=1.5
WV_HIGH_WAVE_THRESHOLD=3.0
WV_MEDIUM_WIND_THRESHOLD=15.0
WV_HIGH_WIND_THRESHOLD=25.0